<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@color/colorAccent"
            android:src="@drawable/ic_baseline_center_focus_strong_24"
            android:scaleType="centerCrop"
            android:id="@+id/image_pdf_front"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:maxLines="1"
            android:id="@+id/pdf_title_front"
            android:layout_toRightOf="@+id/image_pdf_front"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/date_created"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/pdf_title_front"
            android:layout_toRightOf="@+id/image_pdf_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/number_of_pages"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/number_of_pages"
            android:layout_below="@+id/pdf_title_front"
            android:layout_toRightOf="@+id/date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>