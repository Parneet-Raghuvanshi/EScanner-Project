<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/toplayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Welcome"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="60sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/middlelayout"
                android:layout_below="@+id/toplayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email_id_txt"
                    android:layout_margin="20dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="8dp"
                    android:drawableLeft="@drawable/ic_baseline_mail_24"
                    android:textColorHint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:hint="Email"
                    android:textSize="16sp"
                    android:background="@drawable/btn_shape_round"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:maxLines="1"
                    android:id="@+id/name_id_txt"
                    android:layout_margin="20dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="8dp"
                    android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                    android:textColorHint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:hint="Full Name"
                    android:textSize="16sp"
                    android:background="@drawable/btn_shape_round"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:maxLines="1"
                    android:inputType="phone"
                    android:layout_below="@+id/email_id_txt"
                    android:id="@+id/phone_id_txt"
                    android:layout_margin="20dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="8dp"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    android:textColorHint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:hint="Phone Number"
                    android:textSize="16sp"
                    android:background="@drawable/btn_shape_round"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/otp_txt"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:maxLines="1"
                    android:inputType="number"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="8dp"
                    android:drawableLeft="@drawable/ic_baseline_comment_24"
                    android:textColorHint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:hint="OTP"
                    android:textSize="16sp"
                    android:background="@drawable/btn_shape_round"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/terms_checkbox"
                    android:text="I accept all terms and contitions."
                    android:textColor="@color/colorAccent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/readmore_txt"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:text="Read more..."
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/middlelayout"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_marginBottom="30dp"
                        android:textColor="#ffffff"
                        android:text="      Continue      "
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_gradient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:visibility="gone"
                        android:id="@+id/finish_btn"
                        android:layout_marginBottom="30dp"
                        android:textColor="#ffffff"
                        android:text="      Finish      "
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_gradient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ProgressBar
                        android:id="@+id/pb_login_action"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/reghere_txt"
                    android:layout_marginBottom="40dp"
                    android:textSize="16sp"
                    android:text="Already a User, Login?"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>